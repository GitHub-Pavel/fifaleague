<%
const pageinfo = {
  title: 'Home',
  meta: true,
  authorized: true,
  footer: {
    background: "img/footer_bg.jpg"
  },
  authorizedInfo: {
    messages: 3,
    user: {
      media: true,
      mediaUrl: "img/user.svg",
      name: "Сергей"
    },
    getMenu() {
      const messages = this.messages;
      return [
        {count: messages, value: "Сообщения"},
        {value: "Профиль"},
        {value: "Настройки"},
        {value: "Выход"},
      ];
    }
  }
}; 
%> 
   
<!doctype html> 
<html lang="ru">
  <%- include('common/head', pageinfo); %> 

  <section class="section homepage-current-tournaments">
    <div class="container">
      <div class="section__head">
        <h2 class="text-center">Текущие турниры</h2>
      </div>

      <ul class="blue-dark-list">
        <% for(let i=0; i<3; i++) { %> 
          <li class="blue-dark-list__item">
            <%- include('partials/cards/tournament-card', {
              title: "Название турнира FIFA 2020",
              info: [
                {name: "Участников:", value: "243"},
              ]
            }); %> 
          </li>
        <% } %> 
      </ul>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <%- include('partials/banners/homebanner'); %> 
    </div>
  </section>
  
  <section class="section">
    <div class="container">
      <div class="section__head">
        <h2 class="text-center">Последние результаты</h2>
        <%- include('/partials/field/select', {values: [
          {name: "fifa_2020", value: "Название турнира FIFA 2020"},
          {name: "fifa_2021", value: "Название турнира FIFA 2021"},
          {name: "fifa_2022", value: "Название турнира FIFA 2022"},
        ]}); %>
      </div>

      <div class="section__dark-blue-wrap">
        <div class="tabs dark-blue-tabs">
          <div class="tabs-head">
            <button class="tabs-button">Сыгранные матчи</button>
            <button class="tabs-button">Статистика турнира</button>
          </div>
          <div class="tabs-body">
            <div class="tabs-content">
              <% for (let i=0; i<6; i++) { %>
                <%- include('/partials/cards/game-card'); %>
              <% } %>
            </div>
            <div class="tabs-content">
              <table class="statistictable">
                <tbody>
                  <tr>
                    <th>#</th>
                    <th></th>
                    <th>Команда</th>
                    <th>Город</th>
                    <th>Рейтинг</th>
                    <th>Игры</th>
                    <th>В</th>
                    <th>Н</th>
                    <th>П</th>
                    <th>ГЗ</th>
                    <th>ГП</th>
                    <th>РМ</th>
                    <th>О</th>
                  </tr>
                  <% for(let i=0; i<10; i++) { %>
                    <tr>
                      <td><%=i+1%></td>
                      <td>
                        <img
                          width="40"
                          height="40"
                          data-src="img/user.svg"
                          src="<%- placeholder %>"
                          class="b-lazy"
                          title="Username"
                        >
                      </td>
                      <td>
                        <div class="text text-big">Название команды</div>
                        <div class="text">( Капитан команды )</div>
                      </td>
                      <td>
                        <div class="text text-big">Ростов-на-Дону</div>
                      </td>
                      <td>
                        <div class="text text-big"><span>Рейтинг:</span> 95</div>
                      </td>
                      <td>
                        <div class="text text-big"><span>Игры:</span> 74</div>
                      </td>
                      <td>
                        <div class="text text-big"><span>В:</span> 64</div>
                      </td>
                      <td>
                        <div class="text text-big"><span>Н:</span> 5</div>
                      </td>
                      <td>
                        <div class="text text-big"><span>П:</span> 5</div>
                      </td>
                      <td>
                        <div class="text text-big"><span>ГЗ:</span> 269</div>
                      </td>
                      <td>
                        <div class="text text-big"><span>ГП:</span> 269</div>
                      </td>
                      <td>
                        <div class="text text-big"><span>РМ:</span> 269</div>
                      </td>
                      <td>
                        <div class="text text-big"><span>О:</span> 269</div>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
              <%- include('/partials/elements/pagination'); %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </section>



  <section class="section">
    <div class="container">
      <div class="section__head">
        <h2 class="text-center">Игроки онлайн</h2>
        <%- include('/partials/field/select', {values: [
          {name: "all", value: "Все игроки"},
          {name: "offline", value: "Офлайн игроки"},
          {name: "online", value: "Все игроки онлайн"},
        ]}); %>
      </div>

      <div class="section__dark-blue-wrap">
        <table class="statistictable">
          <tbody>
            <tr>
              <th>#</th>
              <th></th>
              <th>Игрок</th>
              <th>Рейтинг (ELO)</th>
              <th>Очки</th>
              <th>Победы</th>
              <th></th>
              <th></th>
            </tr>
            <% for(let i=0; i<10; i++) { %>
              <tr>
                <td><%=i+1%></td>
                <td>
                  <img
                    width="40"
                    height="40"
                    data-src="img/user.svg"
                    src="<%- placeholder %>"
                    class="b-lazy"
                    title="Username"
                  >
                </td>
                <td>
                  <div class="text text-big">Никнейм игрока</div>
                </td>
                <td>
                  <div class="text text-big"><span>Рейтинг (ELO):</span> 231</div>
                </td>
                <td>
                  <div class="text text-big"><span>Очки:</span> 95</div>
                </td>
                <td>
                  <div class="text text-big"><span>Победы:</span> 74</div>
                </td>
                <td>
                  <%- include('/partials/btns/primary', {value: "Сразиться"}); %>
                </td>
                <td>
                  <%- include('/partials/btns/primary', {value: "Написать"}); %>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
        <%- include('/partials/elements/pagination'); %>
      </div>

    </div>
  </section>

  <section class="section homepage-blocks">
    <div class="container">
      <div class="homepage-blocks__wrap">

        <%- include('partials/block/homepage-block', {title: "Новости лиги"}); %>
        <%- include('partials/block/homepage-block', {title: "Новости FIFA"}); %>
        <%- include('partials/block/homepage-block', {title: "Новости футбола"}); %>
        <%- include('partials/banners/homeblockbanner'); %>        

      </div>
    </div>
  </section>

  <%- include('common/foot', pageinfo); %>
</html>