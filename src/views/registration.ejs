        }); %>
        <%- include('/partials/field/input', {
          placeholder: "Пароль",
          type: "password"
        }); %>
        <%- include('/partials/field/input', {
          placeholder: "Повторите пароль",
          type: "password"
        }); %>
        <%- include('/partials/field/checkbox', {
          value: "ready",
          title: "Я принимаю условия",
          name: "is_ready",
          text: {
            value: "Я принимаю условия пользовательского соглашения и даю согласие на обработку персональных данных в соответствии с законодательством РФ"
          }
        }); %>
        <%- include('/partials/btns/primary', {value: "Зарегестрироваться"}); %>
      </form>
    <%- include('partials/section/dark-blue/foot'); %> 

  <%- include('common/foot', pageinfo); %>
